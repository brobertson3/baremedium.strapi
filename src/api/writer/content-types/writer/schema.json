{
  "kind": "collectionType",
  "collectionName": "writers",
  "info": {
    "singularName": "writer",
    "pluralName": "writers",
    "displayName": "Writer"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Avatar": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "Bio": {
      "type": "text"
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "writer"
    }
  }
}
